<?xml version="1.0" encoding="utf-8"?>
<form xmlns="http://jelix.org/ns/forms/1.1">


<input ref="reference" readonly="true">
    <label>Reference</label>
</input>

<radiobuttons ref="civility" required="true">
    <label locale="ecom~account.field.civility" />
    <item value="mr" locale="ecom~account.field.civility.mr"/>
    <item value="mrs" locale="ecom~account.field.civility.mrs"/>
    <item value="miss" locale="ecom~account.field.civility.miss"/>
</radiobuttons>

<input ref="firstname" required="true" maxlength="100">
	<label locale="ecom~account.field.firstname" />
</input>

<input ref="lastname" required="true" maxlength="100">
	<label locale="ecom~account.field.lastname" />
</input>

<input ref="email" required="true" maxlength="100">
	<label locale="ecom~account.field.email" />
</input>

<secret ref="password" required="true">
    <label>Password</label>
    <confirm>Confirm</confirm>
</secret>

<submit ref="_submit">
	<label>ok</label>
</submit>
</form>
