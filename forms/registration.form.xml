<?xml version="1.0" encoding="utf-8"?>
<form xmlns="http://jelix.org/ns/forms/1.1">

<hidden ref="registration_url_error" />
<hidden ref="registration_url_redirect" />


<hidden ref="login" />

<input ref="email" required="true" maxlength="50">
	<label>Email</label>
</input>


<secret ref="password" required="true" maxlength="50">
	<label>Mot de passe</label>
	<confirm>Confirmation du mot de passe</confirm>
</secret>


<radiobuttons ref="civility" required="true">
    <label locale="ecom~account.field.civility" />
    <item value="mr" locale="ecom~account.field.civility.mr"/>
    <item value="mrs" locale="ecom~account.field.civility.mrs"/>
    <item value="miss" locale="ecom~account.field.civility.miss"/>
</radiobuttons>

<input ref="firstname" required="true" maxlength="100">
	<label>Nom</label>
</input>

<input ref="lastname" required="true" maxlength="100">
	<label>Prenom</label>
</input>

<input ref="entreprise" maxlength="100">
	<label>Entreprise</label>
</input>

<textarea ref="adresse" required="true">
	<label>Adresse</label>
</textarea>

<input ref="codepostal" required="true" maxlength="10">
	<label>Codepostal</label>
</input>

<input ref="ville" required="true" maxlength="100">
	<label>Ville</label>
</input>

<input ref="region" required="true" maxlength="100">
	<label>Region</label>
</input>

<input ref="pays" required="true" maxlength="100">
	<label>Pays</label>
</input>

<input ref="telephone" required="true" maxlength="20">
	<label>Telephone</label>
</input>

<input ref="fax" maxlength="20">
	<label>Fax</label>
</input>

<submit ref="_submit">
	<label>ok</label>
</submit>
</form>
